{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:storybook/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "eqeqeq": "error",
    // TODO - turn this on while coding to remove these error step by step from the codebase
    "@typescript-eslint/strict-boolean-expressions": "off",
    "react-hooks/exhaustive-deps": "error",
    "no-use-before-define": "error",
    "max-lines": ["warn", 500],
    "no-restricted-imports": [
      "error",
      // Import should be next/navigation
      "next/router",
      // We should not import clerk directly in components
      // But instead use the AuthContext
      "@clerk/nextjs",
      "@clerk/nextjs/server"
    ],
    "no-console": ["error", { "allow": ["error", "warn", "info"] }],
    "react/no-object-type-as-default-prop": "error"
  },
  "ignorePatterns": ["__mocks__/**/*"]
}
